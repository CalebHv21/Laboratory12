<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="850.0" prefWidth="1032.0" style="-fx-background-color: linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, #384463 0.0%, #343336 100.0%);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MSTController">
    <children>
        <Pane fx:id="mainPane" prefHeight="868.0" prefWidth="1032.0">
            <children>
                <!-- Título superior -->
                <Pane layoutX="1.0" prefHeight="80.0" prefWidth="1032.0" style="-fx-background-color: linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, #384463 0.0%, #343336 100.0%);">
                    <children>
                        <Text fx:id="txtTitle" layoutX="130.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Minimum Spanning Tree (Kruskal and Prim)" textAlignment="CENTER" wrappingWidth="772.0">
                            <font>
                                <Font name="Serif Regular" size="40.0" />
                            </font>
                            <fill>
                                <LinearGradient endX="1.0" endY="1.0">
                                    <stops>
                                        <Stop>
                                            <color>
                                                <Color red="0.5260721445083618" green="0.6059494614601135" blue="0.8947368264198303" />
                                            </color>
                                        </Stop>
                                        <Stop offset="0.6280487804878049">
                                            <color>
                                                <Color red="1.0" green="1.0" blue="1.0" />
                                            </color>
                                        </Stop>
                                        <Stop offset="1.0">
                                            <color>
                                                <Color red="1.0" green="1.0" blue="1.0" />
                                            </color>
                                        </Stop>
                                    </stops>
                                </LinearGradient>
                            </fill>
                        </Text>
                    </children>
                </Pane>

                <!-- Área principal con gradiente radial -->
                <Pane layoutX="1.0" layoutY="80.0" prefHeight="789.0" prefWidth="1032.0" style="-fx-background-color: radial-gradient(focus-angle 0.0deg, focus-distance 11.4943% , center 50.0% 50.0%, radius 59.1954%, #ffffff 0.0%, #8f99b5 100.0%);">
                    <children>
                        <!-- Panel de controles superior -->
                        <Pane fx:id="controlPane" layoutY="25.0" prefHeight="150.0" prefWidth="1032.0" style="-fx-background-color: linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, #384463 0.0%, #343336 100.0%);">
                            <children>
                                <!-- Tipo de Grafo -->
                                <Label layoutX="30.0" layoutY="20.0" text="Graph Type:" textFill="WHITE">
                                    <font>
                                        <Font name="Serif Bold" size="16.0" />
                                    </font>
                                </Label>
                                <RadioButton fx:id="rbAdjacencyMatrix" layoutX="30.0" layoutY="45.0" mnemonicParsing="false" text="Adjacency Matrix" textFill="WHITE">
                                    <font>
                                        <Font name="Serif Bold" size="14.0" />
                                    </font>
                                </RadioButton>
                                <RadioButton fx:id="rbAdjacencyList" layoutX="30.0" layoutY="70.0" mnemonicParsing="false" text="Adjacency List" textFill="WHITE">
                                    <font>
                                        <Font name="Serif Bold" size="14.0" />
                                    </font>
                                </RadioButton>
                                <RadioButton fx:id="rbLinkedList" layoutX="30.0" layoutY="95.0" mnemonicParsing="false" text="Linked List" textFill="WHITE">
                                    <font>
                                        <Font name="Serif Bold" size="14.0" />
                                    </font>
                                </RadioButton>

                                <!-- Algoritmo MST -->
                                <Label layoutX="220.0" layoutY="20.0" text="MST Algorithm:" textFill="WHITE">
                                    <font>
                                        <Font name="Serif Bold" size="16.0" />
                                    </font>
                                </Label>
                                <RadioButton fx:id="rbKruskal" layoutX="220.0" layoutY="45.0" mnemonicParsing="false" text="Kruskal" textFill="WHITE">
                                    <font>
                                        <Font name="Serif Bold" size="14.0" />
                                    </font>
                                </RadioButton>
                                <RadioButton fx:id="rbPrim" layoutX="220.0" layoutY="70.0" mnemonicParsing="false" text="Prim" textFill="WHITE">
                                    <font>
                                        <Font name="Serif Bold" size="14.0" />
                                    </font>
                                </RadioButton>

                                <!-- Botones de acción -->
                                <Button fx:id="btnRandomize" layoutX="400.0" layoutY="30.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="150.0" style="-fx-background-radius: 15;" text="Randomize">
                                    <font>
                                        <Font name="Arial" size="18.0" />
                                    </font>
                                </Button>
                                <Button fx:id="btnApplyMST" layoutX="570.0" layoutY="30.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="150.0" style="-fx-background-radius: 15;" text="Apply MST">
                                    <font>
                                        <Font name="Arial" size="18.0" />
                                    </font>
                                </Button>

                                <!-- Etiqueta de peso total -->
                                <Label fx:id="lblTotalWeight" layoutX="750.0" layoutY="35.0" text="Peso Total: -" textFill="WHITE">
                                    <font>
                                        <Font name="Serif Bold" size="16.0" />
                                    </font>
                                </Label>
                            </children>
                        </Pane>

                        <!-- Área de visualización del grafo -->
                        <Pane fx:id="graphPane" layoutX="30.0" layoutY="200.0" prefHeight="450.0" prefWidth="550.0" style="-fx-background-color: #f0f0f0; -fx-border-color: #384463; -fx-border-width: 2px; -fx-border-radius: 10px;" />

                        <!-- Área de resultados -->
                        <VBox layoutX="600.0" layoutY="200.0" prefWidth="400.0" spacing="15.0">
                            <children>
                                <Label text="Results:" textFill="#384463">
                                    <font>
                                        <Font name="Serif Bold" size="18.0" />
                                    </font>
                                </Label>
                                <TextArea fx:id="txtResult" prefHeight="400.0" prefWidth="380.0" editable="false" style="-fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #384463; -fx-border-width: 2px;" />
                            </children>
                        </VBox>
                    </children>
                </Pane>
            </children>
        </Pane>
    </children>
</AnchorPane>